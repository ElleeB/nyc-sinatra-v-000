<h1>Edit <%=@figure.name%></h1>

<form method="POST" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Figure Name: <input type="text" id="figure_name" name="figure[name]">
  Title: <input type="text" id="new_title" name="title[name]">
  Landmark: <input type="text" id="new_landmark" name="landmark[name]">

  <% Title.all.each do |title| %>
    <p><input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id %>"><%=title.name%><%='checked' if @figure.titles.include?(title) %></p>
  <% end %>

  <% Landmark.all.each do |landmark| %>
    <p><input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%><%='checked' if @figure.landmarks.include?(landmark) %></p>
  <% end %>

  <input type="submit" value="Edit Figure">
</form>
