<h1><u>Edit <%=@figure.name%></u></h1>
<br></br>
<form method="POST" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <b>Figure Name:</b> <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
  <br></br>

  <h2>Enter a new title, or select an existing title:</h2>
  <b>New Title:</b> <input type="text" id="new_title" name="title[name]">
  <% Title.all.each do |title| %>
    <p><input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id %>"><%=title.name%><%='checked' if @figure.titles.include?(title) %></p>
  <% end %>
  <br></br>

  <h2>Enter a new landmark, or select and existing landmark:</h2>
  <b>New Landmark:</b> <input type="text" id="new_landmark" name="landmark[name]">

  <% Landmark.all.each do |landmark| %>
    <p><input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%><%='checked' if @figure.landmarks.include?(landmark) %></p>
  <% end %>

  <input type="submit" value="Edit Figure">
</form>
